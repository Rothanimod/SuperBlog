<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Autor</th>
      <th>Publicado el</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= markdown(post.body.first(250)) %></td>
        <td><%= post.user.email%></td>
        <td><%= post.created_at.strftime("Creado el %d de %B de %Y") %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user == post.user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
